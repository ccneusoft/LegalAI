{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist-electron",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["src/main/types", "node_modules/@types"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/main",
    "src/main/types/**/*.d.ts"
  ]
}
